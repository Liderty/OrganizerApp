<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskListActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small"
        android:text="Tasks"
        android:textColor="@color/colorBrightText"
        android:textSize="@dimen/text_size_small_header"
        android:textAlignment="center"
        android:background="@color/colorDarkText"/>

    <ListView
        android:id="@+id/tasksListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/btnCreateTask"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBrightBackground"
        android:padding="10dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/plus"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Task"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonEditCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Edit Category"
        android:background="@color/colorDarkText"
        android:textColor="@color/colorBrightText"
        android:padding="10dp"/>
</LinearLayout>